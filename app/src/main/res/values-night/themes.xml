<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- background of favs/recent, colour of location, selected tab and semicircle -->
        <item name="colorPrimary">@color/dark_blue</item>
        <!-- favs/recent icon colour -->
        <item name="colorPrimaryDark">@color/very_dark_blue</item>
        <!-- nav bar, outline of favs/recent items, settings titles -->
        <item name="colorAccent">@color/white</item>
        <!-- nothing? -->
        <item name="colorOnPrimary">@color/white</item>


        <!-- Secondary brand color. -->
        <!-- nothing? -->
        <item name="colorSecondary">@color/light_blue</item>
        <!-- colour of buildings -->
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <!-- nothing? -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/very_dark_blue</item>
        <item name="android:colorControlNormal">?android:colorPrimary</item>
        <item name="android:colorControlActivated">?android:colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>