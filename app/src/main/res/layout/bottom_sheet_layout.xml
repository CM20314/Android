<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/directions_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/transparent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="300dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="75dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">
            <View
                android:layout_width="30dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="?android:colorSecondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/directions_start_text_view"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:maxLines="1"
                    android:background="@drawable/location_direction_style"
                    android:textAlignment="center"
                    android:padding="6dp"
                    android:textColor="@color/white"/>


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/arrow_right_alt"/>

                    <TextView
                        android:id="@+id/directions_command_text_view"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="TURN RIGHT"
                        android:background="@drawable/direction_command_style"
                        android:textAlignment="center"
                        android:padding="6dp"
                        android:textColor="@color/white"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/arrow_right_alt"/>

                <TextView
                    android:id="@+id/directions_end_text_view"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="DESTINATION"
                    android:background="@drawable/start_destination_direction_style"
                    android:textAlignment="center"
                    android:padding="6dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>